/* 顶部预留的区域 */
.reserved-top {
  background-color: #fff;
}

.profile {
  background-color: #fff;
  display: flex;
  justify-content: flex-start;
  padding-left: 50rpx;
}

.profile .avatar image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
}

.profile .info {
  margin-left: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  width: 350rpx;
}

.profile .info .nickname {
  font-size: 38rpx;
  font-weight: bold;
}

.profile .info .desc {
  color: #7c7c7c;
  font-size: 30rpx;
}
