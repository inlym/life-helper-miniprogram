<!-- 顶部预留高度 -->
<topspace offset="50"></topspace>

<view class="container">
  <!-- 顶部个人信息区域 -->
  <view class="profile">
    <!-- 用户个人信息（非空情况） -->
    <block wx:if="{{ userInfo.avatarUrl }}">
      <!-- 头像 -->
      <view class="avatar">
        <image src="{{ userInfo.avatarUrl }}" mode="widthFix"></image>
      </view>

      <!-- 昵称、按钮 -->
      <view class="info">
        <view class="nickname"> {{ userInfo.nickName }} </view>
        <view class="desc">欢迎使用我的个人助手</view>
      </view>
    </block>

    <!-- 用户个人信息（为空情况） -->
    <block wx:else>
      <!-- 头像 -->
      <view class="avatar">
        <image src="https://img.lh.inlym.com/common/logo.png" mode="widthFix"></image>
      </view>

      <!-- 昵称、按钮 -->
      <view class="info">
        <view class="nickname">我的个人助手</view>
        <view class="desc">点击更新获取昵称</view>
      </view>
    </block>
    <view class="onecenter"><button size="mini" type="primary" bindtap="onUpdateButtonTap">更新</button></view>
  </view>

  <mpc-footer title="我的个人助手" desc="Copyright 2020-2021 v0.2.2" url="/pages/about/about"></mpc-footer>
</view>
