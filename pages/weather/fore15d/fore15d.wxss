.main {
  padding: 0;
}

/* 顶部 tab 栏 - start */
.tabs {
  background-color: #f5f5f5;
}

.tabs .items {
  width: 1800rpx;
}

.tabs .item {
  width: 120rpx;
  height: 140rpx;
  padding: 30rpx 0;
  font-size: 30rpx;
}

.tabs .item.active {
  color: #07c160;
  padding: 20rpx 0;
  font-size: 38rpx;
}

.tabs .item .weekday {
  font-size: 1em;
}

.tabs .item .date {
  font-size: 0.8em;
  color: #666;
}

.tabs .item .date.active {
  font-size: 0.8em;
  color: #07c160;
}

.item-hover {
  opacity: 0.3;
}

/* 顶部 tab 栏 - end */

/* 下方内容区 - start */
swiper {
  height: 1600rpx;
  background-color: #ededed;
}

.content .top {
  padding: 0 160rpx 0 100rpx;

  background-color: #edf1f4;
}

.content .top image {
  width: 256rpx;
  height: 256rpx;
}

.content .top .temp {
  font-size: 54rpx;
}

/* 纯文字项目 - start */
.text-item {
  text-align: center;
}

.text-item .name {
  font-size: 0.8em;
  color: #888;
  margin-bottom: 10rpx;
}

/* 纯文字项目 - end */

/* 今日详情 - start */
.detail {
  flex-wrap: wrap;
}

.detail .text-item {
  width: 200rpx;
}

/* 今日详情 - end */

.content .content-item {
  margin-top: 16rpx;
  padding: 0 40rpx;
  height: 300rpx;
  background-color: #fff;
}

.content .content-item .left {
  justify-content: center;
  margin-right: 20rpx;
}

.left image {
  width: 180rpx;
  height: 180rpx;
}

.content .content-item .right {
  flex-grow: 1;
}

.content .content-item .right .halfday {
  margin: 20rpx;
  width: 400rpx;
  text-align: center;
}

.content .content-item .right .halfday .title {
  text-align: left;
  width: 30%;
}

.content .content-item .right .halfday .icon {
  font-size: 1.4em;
}

.content .content-item .right .halfday .text {
  font-size: 0.8em;
  color: #666;
  margin-top: 10rpx;
}

.content .content-item .right .halfday .list {
  width: 70%;
}

/* 太阳 - start */
.sunitem .right {
  padding: 0 80rpx;
}

/* 太阳 - end */

/* 月亮 - start */
.moon {
  text-align: center;
  height: 200rpx;
}

.moon .left image {
  width: 140rpx;
  height: 140rpx;
}

.moon .right {
  padding: 0 60rpx;
}

/* 月亮 - end */

/* 下方内容区 - end */
