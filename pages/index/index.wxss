/**index.wxss**/
.weather-condition {
  /* background-color: #fff; */
  padding-bottom: 30rpx;
  background-image: linear-gradient(to top right, #c9e7f3, #afdaed, #9acfe9, #cae4f5, #ffffff);
}

.location {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 14rpx;
}

.location image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 6rpx;
}

.location .address {
  font-size: 26rpx;
}

.temperature {
  position: relative;
  height: 260rpx;
  display: flex;
  justify-content: center;
  align-items: baseline;
}

.temperature .temp-num {
  font-size: 200rpx;
  font-family: 'MingLiU', 'Microsoft YaHei';
  color: #666;
}

.temperature .unit {
  font-size: 40rpx;
}

.temperature image {
  position: absolute;
  width: 160rpx;
  right: 90rpx;
  top: 20rpx;
}

.temperature-feel {
  display: flex;
  justify-content: center;
  align-items: baseline;
}

.temperature-feel text {
  margin: 0 30rpx;
}

.sun {
  display: flex;
  margin-top: 10rpx;
  justify-content: center;
}

.sun view {
  margin: 0 50rpx;
}

.oneword {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 60rpx;
}

.oneword text {
  padding: 4rpx 30rpx;
  background-color: #fff8dc;
}

.weather-other {
  display: flex;
  justify-content: space-around;
  margin-top: 30rpx;
}

.weather-other .other-item {
  width: 120rpx;
  text-align: center;
}

.weather-other .other-item .icon {
  font-size: 40rpx;
  color: #333;
}

.forecast15days {
  margin-top: 80rpx;
}

.fore-scroll {
  width: 100%;
  height: 800rpx;

  border: 1rpx solid red;
}

.fore-day {
  width: 2250rpx;
  height: 270rpx;
  display: flex;
  justify-content: flex-start;

  border: 1rpx solid blue;
}

.fore-item {
  width: 150rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;

  border: 1px solid green;
}

.fore-item image {
  width: 70rpx;
  height: 70rpx;
}

.fore-line {
  width: 100%;
  height: 260rpx;
}

.fore-line ec-canvas {
  width: 2250rpx;
}

.fore-night {
  width: 2250rpx;
  height: 270rpx;
  display: flex;
  justify-content: flex-start;

  border: 1rpx solid blue;
}
